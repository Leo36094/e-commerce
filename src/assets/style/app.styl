// If you have to use other language but English,
// you need setting document text format to utf-8.
// http://blog.shg25.com/?p=97
@charset 'utf-8'
@import '_reboot.styl'
@import '_base.styl'
@keyframes up-down
  0%
    bottom 80px

  25%
    bottom 85px

  50%
    bottom 90px
    // border-bottom-right-radius 25px

  75%
    bottom 85px

  100%
    bottom 80px
@keyframes cart
  0%
    bottom 80px

  25%
    bottom 85px

  50%
    bottom 90px
    // border-bottom-right-radius 25px

  75%
    bottom 85px

  100%
    bottom 80px

@keyframes fold-in
  0%
    transform translate3d(100%, 0, 0)

  100%
    transform translate3d(0, 0, 0)

@keyframes fold-out
  0%
    transform translate3d(0, 0, 0)

  100%
    transform translate3d(100%, 0, 0)

.form
  &__row
    display flex
    justify-content space-between
    align-items: center
    flex-wrap wrap

  &__column
    display inline-block
    margin-bottom 20px

    &.half
      width calc(50% - 10px)

    &.full
      width 100%

    &.nine-tenth
      width calc(100% * 0.9)

    &.eight-tenth
      width calc(100% * 0.8)

    &.five-tenth
      width calc(100% * 0.5)

    &.two-tenth
      width calc(100% * 0.2)

    &.one-tenth
      width calc(100% * 0.1)

    &.text-reminder
      font-size 12px
      line-height 1.5
      color #545556

  &__title
    font-size: 14px
    font-weight 700

.page-enter-active, .page-leave-active
  transition all 0.5s

.page-enter, .page-leave-to
  opacity 0

.page-enter-to, .page-leave
  opacity 1

.Popup-enter-active
  animation-name fold-in
  animation-duration .5s

.Popup-leave-active
  animation-name fold-out
  animation-duration .5s