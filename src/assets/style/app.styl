@charset 'utf-8'
@import 'reset.css';
@keyframes fold-in
  0%
    transform translate3d(100%, 0, 0)

  100%
    transform translate3d(0, 0, 0)

@keyframes fold-out
  0%
    transform translate3d(0, 0, 0)

  100%
    transform translate3d(100%, 0, 0)
$primary-color = #27bec2;
$error-color = #ea0000;
.form
  &__row
    display flex
    justify-content space-between
    flex-wrap wrap

  &__column
    display inline-block
    margin-bottom 20px

    &.half
      width calc(50% - 10px)

    &.full
      width 100%

    &.nine-tenth
      width calc(100% * 0.9)

    &.eight-tenth
      width calc(100% * 0.8)

    &.five-tenth
      width calc(100% * 0.5)

    &.two-tenth
      width calc(100% * 0.2)

    &.one-tenth
      width calc(100% * 0.1)

    &.text-reminder
      font-size 12px
      line-height 1.5
      color #545556

  &__title
    font-size: 14px
    font-weight 700

.page-enter-active, .page-leave-active
  transition all 0.5s

.page-enter, .page-leave-to
  opacity 0

.page-enter-to, .page-leave
  opacity 1

.Popup-enter-active
  animation-name fold-in
  animation-duration 0.5s

.Popup-leave-active
  animation-name fold-out
  animation-duration 0.5s